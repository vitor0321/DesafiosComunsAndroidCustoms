<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.desafioscomunsandroidcustoms.presentation.ui.fragment.linha_do_tempo.LinhaDoTempoFragment">

    <include
        android:id="@+id/xIdBusConnectStartInclude"
        layout="@layout/bus_start"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <include
        android:id="@+id/xIdBusConnectInfoInclude"
        layout="@layout/bus_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/xIdBusConnectStartInclude" />

    <include
        android:id="@+id/xIdBusConnectScalaInclude"
        layout="@layout/bus_scala"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/xIdBusConnectInfoInclude" />

    <include
        android:id="@+id/xIdBusConnectInfoScalaInclude"
        layout="@layout/bus_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/xIdBusConnectScalaInclude" />

    <include
        android:id="@+id/xIdBusConnectEndInclude"
        layout="@layout/bus_end"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/xIdBusConnectInfoScalaInclude" />

    <include
        layout="@layout/bus_divider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/xIdBusConnectEndInclude" />

</androidx.constraintlayout.widget.ConstraintLayout>